<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/article_card_height"
    android:layout_marginTop="@dimen/article_card_divider_height"
    android:layout_marginBottom="16dp"
    card_view:cardCornerRadius="0dp" >
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/article_card_bg" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/article_card_image_margin"
        android:layout_marginTop="@dimen/article_card_image_margin"
        android:layout_marginRight="@dimen/article_card_image_margin"
        android:layout_marginBottom="48dp">
        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_gravity="top"
            android:src="@drawable/title_gradient" />
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="18dp"
            android:layout_marginRight="18dp"
            android:layout_gravity="center_horizontal|top"
            android:maxLines="2"
            android:textSize="18sp"
            android:gravity="center"
            android:ellipsize="end"
            android:textStyle="bold"
            android:textColor="#ffffff"/>
    </FrameLayout>
    <TextView
        android:id="@+id/source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:layout_marginLeft="@dimen/article_list_item_text_horizontal_margin"
        android:layout_marginRight="48dp"
        android:layout_marginBottom="16dp"
        android:textColor="#af5e5e5e"
        android:textSize="16sp"
        android:ellipsize="end"/>
    <ImageButton
        android:id="@+id/signals"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/signals"
        android:textColor="#555555"
        android:textSize="12sp"
        android:src="@drawable/ic_signals"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"/>
</android.support.v7.widget.CardView>