<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/article_card_height"
    android:layout_marginTop="@dimen/article_card_divider_height"
    android:layout_marginBottom="16dp"
    card_view:cardCornerRadius="0dp" >
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/article_card_bg" />
    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/article_image_height"
        android:layout_margin="@dimen/article_card_image_margin"
        android:scaleType="centerCrop" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/article_list_item_text_horizontal_margin"
        android:layout_marginTop="@dimen/article_image_height"
        android:layout_marginRight="@dimen/article_list_item_text_horizontal_margin"
        android:orientation="vertical" >
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:maxLines="2"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textAlignment="center"
            android:ellipsize="end" />
        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:maxLines="4"
            android:textSize="16sp"
            android:ellipsize="end" />
    </LinearLayout>
    <Button
        android:id="@+id/signals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="6dp"
        android:text="@string/signals"
        android:textColor="#555555"
        android:textSize="12sp"
        android:background="@android:color/transparent" />
</android.support.v7.widget.CardView>