<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/loading_background_color" >
    <reader.disqus.com.disqusreader.LoadingSpinner
        android:id="@+id/spinner"
        android:layout_width="800dp"
        android:layout_height="800dp"
        android:layout_marginBottom="64dp"
        android:layout_gravity="center" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/article_list_horizontal_margin"
        android:layout_marginRight="@dimen/article_list_horizontal_margin"
        android:scrollbars="vertical" >
    </android.support.v7.widget.RecyclerView>
</FrameLayout>